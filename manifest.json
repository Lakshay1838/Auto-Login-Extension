{
  "manifest_version": 3,
  "name": "Auto Wi-Fi Login + Coca Cola Mask",
  "version": "1.0",
  "description": "Automatically logs into Wi-Fi captive portal and shows Coca-Cola message",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "http://www.msftconnecttest.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://www.msftconnecttest.com/redirect", "<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}